<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Clients.ClientLeadThree">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <RelativeLayout
                    android:id="@+id/topbar"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <ImageView
                        android:id="@+id/ty"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/ic_baseline_arrow_back_24"
                        android:padding="4dp" />

                    <TextView
                        android:id="@+id/text_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="New Client Lead"
                        android:textColor="@color/text"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/p1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/topbar"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"

                    >


                    <RelativeLayout
                        android:id="@+id/q1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:id="@+id/det_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/invisible"
                            android:fontFamily="sans-serif-light"
                            android:text="No. of Students"
                            android:textColor="@color/grey"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_det_1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/det_one"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:forceHasOverlappingRendering="true"
                            app:cardBackgroundColor="@color/fade_white"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="5dp"
                            app:cardPreventCornerOverlap="true">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:background="@color/white"
                                android:forceHasOverlappingRendering="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="3dp"
                                app:cardElevation="10dp"
                                app:cardPreventCornerOverlap="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:background="@color/invisible"
                                        android:fontFamily="sans-serif-light"
                                        android:gravity="center|start"
                                        android:text=" e.g 500 "
                                        android:textSize="15sp" />


                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/q2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/q1"
                        android:layout_marginTop="20dp"

                        >

                        <TextView
                            android:id="@+id/det_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/invisible"
                            android:fontFamily="sans-serif-light"
                            android:text="Minimum termly fees per student"
                            android:textColor="@color/grey"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_det_2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/det_two"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:forceHasOverlappingRendering="true"
                            app:cardBackgroundColor="@color/fade_white"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="5dp"
                            app:cardPreventCornerOverlap="true">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:background="@color/white"
                                android:forceHasOverlappingRendering="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="3dp"
                                app:cardElevation="10dp"
                                app:cardPreventCornerOverlap="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:background="@color/invisible"
                                        android:fontFamily="sans-serif-light"
                                        android:gravity="center|start"
                                        android:text=" e.g Ksh 50,000 "
                                        android:textSize="15sp" />


                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/q3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/q2"
                        android:layout_marginTop="20dp"

                        >

                        <TextView
                            android:id="@+id/det_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/invisible"
                            android:fontFamily="sans-serif-light"
                            android:text="Maximum termly fees per student"
                            android:textColor="@color/grey"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_det_3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/det_three"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:forceHasOverlappingRendering="true"
                            app:cardBackgroundColor="@color/fade_white"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="5dp"
                            app:cardPreventCornerOverlap="true">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:background="@color/white"
                                android:forceHasOverlappingRendering="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="3dp"
                                app:cardElevation="10dp"
                                app:cardPreventCornerOverlap="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:background="@color/invisible"
                                        android:fontFamily="sans-serif-light"
                                        android:gravity="center|start"
                                        android:text=" e.g 50,000 "
                                        android:textSize="15sp" />


                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/q4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/q3"
                        android:layout_marginTop="20dp"

                        >

                        <TextView
                            android:id="@+id/det_five"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/invisible"
                            android:fontFamily="sans-serif-light"
                            android:text="Upload Business Documents"
                            android:textColor="@color/grey"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/text_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:gravity="start"
                            android:layout_below="@id/det_five"
                            android:layout_marginTop="10dp"
                            android:text=" {Business Permit, lorem, lorem etc.} "
                            android:textColor="@color/grey"
                            android:textSize="15sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            android:orientation="horizontal"
                            android:layout_below="@+id/text_one"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"

                            >

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_det_5.1"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:forceHasOverlappingRendering="true"
                                app:cardBackgroundColor="@color/grey"
                                app:cardCornerRadius="1dp"
                                android:layout_margin="2dp"
                                app:cardElevation="5dp"
                                app:cardPreventCornerOverlap="true">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:background="@color/white"
                                    android:forceHasOverlappingRendering="true"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="1dp"
                                    app:cardElevation="10dp"
                                    app:cardPreventCornerOverlap="true">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:srcCompat="@drawable/ic_baseline_upload_file_24"
                                            android:padding="30dp"
                                            />

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_det_5.2"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:forceHasOverlappingRendering="true"
                                app:cardBackgroundColor="@color/grey"
                                app:cardCornerRadius="3dp"
                                android:layout_margin="2dp"
                                app:cardElevation="5dp"
                                app:cardPreventCornerOverlap="true">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:background="@color/white"
                                    android:forceHasOverlappingRendering="true"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="10dp"
                                    app:cardPreventCornerOverlap="true">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:srcCompat="@drawable/ic_baseline_upload_file_24"
                                            android:padding="30dp"
                                            />

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_det_5.3"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:forceHasOverlappingRendering="true"
                                app:cardBackgroundColor="@color/grey"
                                app:cardCornerRadius="3dp"
                                android:layout_margin="2dp"
                                app:cardElevation="5dp"
                                app:cardPreventCornerOverlap="true">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:background="@color/white"
                                    android:forceHasOverlappingRendering="true"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="10dp"
                                    app:cardPreventCornerOverlap="true">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:srcCompat="@drawable/ic_baseline_upload_24"
                                            android:padding="30dp"
                                            />

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/q6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/q4"
                        android:layout_marginTop="20dp"

                        >

                        <TextView
                            android:id="@+id/det_six"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/invisible"
                            android:fontFamily="sans-serif-light"
                            android:text="Hub"
                            android:textColor="@color/grey"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_det_6"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/det_six"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:forceHasOverlappingRendering="true"
                            app:cardBackgroundColor="@color/fade_white"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="5dp"
                            app:cardPreventCornerOverlap="true">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:background="@color/white"
                                android:forceHasOverlappingRendering="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="3dp"
                                app:cardElevation="10dp"
                                app:cardPreventCornerOverlap="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:background="@color/invisible"
                                        android:fontFamily="sans-serif-light"
                                        android:gravity="center|start"
                                        android:text=" e.g Lorem "
                                        android:textSize="15sp" />


                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/q7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/q6"
                        android:layout_marginTop="20dp"

                        >

                        <TextView
                            android:id="@+id/det_seven"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/invisible"
                            android:fontFamily="sans-serif-light"
                            android:text="Spoke"
                            android:textColor="@color/grey"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_det_7"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/det_seven"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:forceHasOverlappingRendering="true"
                            app:cardBackgroundColor="@color/fade_white"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="5dp"
                            app:cardPreventCornerOverlap="true">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:background="@color/white"
                                android:forceHasOverlappingRendering="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="3dp"
                                app:cardElevation="10dp"
                                app:cardPreventCornerOverlap="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:background="@color/invisible"
                                        android:fontFamily="sans-serif-light"
                                        android:gravity="center|start"
                                        android:text=" e.g Lorem "
                                        android:textSize="15sp" />


                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/q7"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="80dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/invisible"
                            android:forceHasOverlappingRendering="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="10dp"
                            app:cardPreventCornerOverlap="true">

                            <Button
                                android:id="@+id/btn_next"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/invisible"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/teal"
                                android:fontFamily="sans-serif-light"
                                android:text="Verify Email"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/text_seven"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="sans-serif-smallcaps"
                                android:gravity="center"
                                android:text="next"
                                android:textColor="@color/white"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>



                </RelativeLayout>


            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>